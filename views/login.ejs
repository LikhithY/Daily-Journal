<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Daily Journal</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Prata&family=Roboto:wght@300&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://kit.fontawesome.com/43124feaf5.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header" style="width:100%;">
        <p class="navbar-brand" style="text-align: center; width:100%; font-size: 23px; padding-left:45px;"><a href="/login">DAILY JOURNAL</a></p>
      </div>
</div>
  </nav>

  <div class="potOne">
    <img src="/assets/cloud.png" alt="cloud">
  </div>
  <div class="potTwo">
    <img src="/assets/cloud.png" alt="cloud">
  </div>


  <form class="form-signin" action="/login" method="post">
    <h3>Log in to your account</h3>
    <button class="btn btn-lg btn-block auth-button" type="submit"><i class="fa-brands fa-google"></i><a href="/auth/google" role="button">&nbsp Log in with Google</a></button>

    <div class="or">
      <span>or</span>
    </div>

    <% if(typeof errors != 'undefined'){ %>
    <% errors.forEach(function(error){ %>
    <div class="alert-button"><%= error.msg %></div>
    <% }); %>
    <% } %>
    <% if(typeof msg != 'undefined'){ %>
    <div class="alert-button"><%= msg %></div>
    <% }; %>
    <% if(typeof success != 'undefined'){ %>
    <div class="alert-button"><%= success %></div>
    <% }; %>

    <div class="form-floating">
      <input type="email" name="username" class="form-control bottom" placeholder="Email">
    </div>

    <div class="form-floatingot">
      <input type="password" name="password" class="form-control bottom" placeholder="Password">
    </div>

    <button class="btn btn-lg btn-block" type="submit">Login</button>
    <br>
    <p style="text-align: center"> Not a user? <a style="text-decoration: underline;" href="/signup">Sign up</a></p>

  </form>



  <div class="footer-padding"></div>
  <div class="footer">
    <p>Copyright Â© 2022 </p>
  </div>
  </div>
</body>

</html>
